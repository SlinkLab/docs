---
import Button from './Button.astro';

interface Props {
  title: string;
  description: string;
  primaryAction: {
    text: string;
    href: string;
    icon?: string;
  };
  secondaryAction?: {
    text: string;
    href: string;
    icon?: string;
  };
}

const { title, description, primaryAction, secondaryAction } = Astro.props;
---

<section class="py-20 sm:py-24 flex justify-center">
  <div class="max-w-3xl mx-auto px-6 sm:px-8 text-center">
    <div class="flex flex-col gap-4">
      <div class="flex flex-col gap-2">
        <h2 class="text-3xl sm:text-4xl font-extralight text-gray-900 dark:text-white">
          {title}
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-xl mx-auto">
          {description}
        </p>
      </div>
      <div class="flex flex-col sm:flex-row gap-3 justify-center items-center max-w-sm sm:max-w-none mx-auto">
        <Button
          variant="primary"
          href={primaryAction.href}
          icon={primaryAction.icon}
          size="lg"
          class="w-full sm:w-auto px-6 py-3 font-medium"
        >
          {primaryAction.text}
        </Button>
        {secondaryAction && (
          <Button
            variant="secondary"
            href={secondaryAction.href}
            icon={secondaryAction.icon}
            external={true}
            size="lg"
            class="w-full sm:w-auto px-6 py-3 font-medium"
          >
            {secondaryAction.text}
          </Button>
        )}
      </div>
    </div>
  </div>
</section>

