---
import { Icon } from 'astro-icon/components';

interface Props {
	icon?: string;
	title: string;
	gradient?: string;
}

const { icon, title, gradient } = Astro.props;
---

<article class="group relative bg-white dark:bg-gray-900 border border-gray-200/60 dark:border-gray-800/60 rounded-2xl p-8 transition-all duration-300 hover:shadow-xl hover:shadow-gray-900/5 dark:hover:shadow-black/20 hover:-translate-y-2 hover:border-gray-300/80 dark:hover:border-gray-700/80">
	<div class="flex flex-col gap-6">
		<div class="flex items-center gap-4">
			{icon && (
				<div class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-purple-500 to-blue-600 rounded-md flex items-center justify-center shadow-lg shadow-purple-500/25">
					<Icon name={icon} class="w-4 h-4 text-white" />
				</div>
			)}
			<span class="text-2xl font-light text-gray-900 dark:text-white leading-tight" set:html={title} />
		</div>
		<div class="text-gray-600 dark:text-gray-400 leading-relaxed font-extralight">
			<slot />
		</div>
	</div>
</article>
